<resources>

    <style name="TextAppearance.Msggo.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/noto_serif_subset</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Msggo.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/noto_serif_subset</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Bottom Navigation Active Indicator -->
    <style name="Widget.Msggo.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorSecondaryContainer</item>
    </style>

    <!-- Card styles -->
    <style name="Widget.Msggo.CardView.Filled" parent="Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>
